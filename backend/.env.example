# Database Configuration (Option 1: Individual settings)
DB_NAME=studysync_db
DB_USER=studysync_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Database Configuration (Option 2: DATABASE_URL for cloud deployments)
# DATABASE_URL=postgresql://user:password@host:port/database
# Example for Vercel/Railway: DATABASE_URL=postgresql://user:pass@hostname:5432/dbname

# Django Configuration
SECRET_KEY=your-secret-key-here-make-it-long-and-random
DEBUG=False
ALLOWED_HOSTS=your-app-name.vercel.app,localhost,127.0.0.1

# Google OAuth 2.0 Settings
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id-here
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret-here

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here

# CORS Settings (for production)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app

# Payment API Keys (Replace with actual keys)
# bKash
BKASH_BASE_URL=https://tokenized.pay.bka.sh/v1.2.0-beta
BKASH_USERNAME=your_bkash_username
BKASH_PASSWORD=your_bkash_password
BKASH_APP_KEY=your_bkash_app_key
BKASH_APP_SECRET=your_bkash_app_secret

# Nagad
NAGAD_BASE_URL=https://api.mynagad.com/api/dfs/check-out/v1
NAGAD_MERCHANT_ID=your_nagad_merchant_id
NAGAD_PUBLIC_KEY=your_nagad_public_key
NAGAD_PRIVATE_KEY=your_nagad_private_key

# Rocket
ROCKET_BASE_URL=https://rocket.com.bd/api
ROCKET_MERCHANT_ID=your_rocket_merchant_id
ROCKET_API_KEY=your_rocket_api_key
ROCKET_SECRET_KEY=your_rocket_secret_key

# Stripe (existing)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# CORS Settings
